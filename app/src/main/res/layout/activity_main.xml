<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/curious_blue"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/lekcja1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_button_margin"
        android:width="@dimen/main_button_width"
        android:background="@color/seance"
        android:onClick="onClickLekcja1"
        android:text="@string/lekcja_pierwsza"
        android:textColor="@color/gamboge"
        android:textSize="@dimen/main_button_txtSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/lekcja2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/lekcja2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_button_margin"
        android:layout_marginBottom="@dimen/main_button_margin"
        android:width="@dimen/main_button_width"
        android:background="@color/rock"
        android:onClick="onClickLekcja2"
        android:text="@string/lekcja_druga"
        android:textColor="@color/gamboge"
        android:textSize="@dimen/main_button_txtSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/lekcja3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_button_margin"
        android:width="@dimen/main_button_width"
        android:background="@color/rock"
        android:onClick="onClickLekcja3"
        android:text="@string/lekcja_trzecia"
        android:textColor="@color/gamboge"
        android:textSize="@dimen/main_button_txtSize"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lekcja2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_textview_tresc"
        android:textSize="@dimen/main_textSize"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/pomegranate"
        app:layout_constraintBottom_toTopOf="@+id/lekcja1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>